<table>
    <tr>
      <th>user id</th>
      <th>name</th>
      <th>Surname</th>
      <th>phone</th>
      <th>address</th>
      <!-- <th>password</th> -->
      <th>Action</th>
      </tr>
    <% for(var i = 0; i < users.length; i++) { %>
        <tr>
          <td><%= users[i].user_id %></td>
          <td><%= users[i].fname %></td>
          <td><%= users[i].lname %></td>
          <td><%= users[i].phone %></td>
          <td><%= users[i].address %></td>
          <!-- <td><%= users[i].password %></td> -->
          <td>
              <a href="/users/<%= users[i].user_id %>">View</a>
              <!-- <a href="/users/update/<%= users[i].user_id %>">Edit</a>
              <a href="/users/delete/<%= users[i].user_id %>">Delete</a> -->
          </td>
        </tr>
    <% } %> 
</table>
<a href="/user_create">Create</a>
</body>
</html>